vector<Gebietslokation*> SuchenKlasse::suchId(int id) {
	struct {
		bool operator()(Gebietslokation *lok, int id) {
			return (lok->getId() == id);
		}

		struct BookNumber: public std::binary_function< Gebietslokation*, int, bool > {
		  bool operator () ( const Book &book, const int &number ) const {
		    return book.number == number;
		    }
		  };
	} inner; //inner ist die einzige Instanz
	SuchenKlasse::suchen(equals, id);
}
