#include "FileOpener.h"

FileOpener::FileOpener() {
}

FileOpener::~FileOpener() {
	if(datei != NULL){
		fclose(datei);
	}
}

void FileOpener::oeffneDatei(const char* adresse) {
	ifstream FileTest("testdatei.txt");
	if(!FileTest){
		throw FileNotFoundException(adresse);
	}
	//Die Datei kann nur ausgelesen werden
	 datei = fopen (adresse,"r");
}

