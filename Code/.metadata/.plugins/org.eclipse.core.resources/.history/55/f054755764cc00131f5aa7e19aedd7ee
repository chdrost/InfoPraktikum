#include "ZeitException.h"

ZeitException::ZeitException() {
	// TODO Auto-generated constructor stub

}

ZeitException::~ZeitException() {
	// TODO Auto-generated destructor stub
}

int ZeitException::checkSekunde(int sekunde) {
	if(sekunde < 0 || sekunde > 59){
		return 1;
	}else{
		return 0;
	}
}

int ZeitException::checkMinute(int minute) {
	checkSekunde(minute);
}

int ZeitException::checkStunde(int stunde) {
	if(stunde < 0 || stunde > 23){
		return 1;
	}else{
		return 0;
	}
}

int ZeitException::checkTag(int tag) {
	if(tag < 0 || tag > 31){
		return 1;
	}else{
		return 0;
	}
}

int ZeitException::checkMonat(int monat) {
	if(monat< 0 || monat > 12){
		return 1;
	}else{
		return 0;
	}
}

int ZeitException::checkJahr(int jahr) {
	// Wird nicht benoetigt
}
