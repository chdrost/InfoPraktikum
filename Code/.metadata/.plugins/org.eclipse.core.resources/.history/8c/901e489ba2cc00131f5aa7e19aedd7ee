#include "FileOpener.h"

FileOpener::FileOpener() {
}

FileOpener::~FileOpener() {
	if (datei != NULL) {
		fclose(datei);
	}
}

void FileOpener::oeffneDatei(const char* adresse) {
	ifstream datei(adresse, ifstream::in);
	if (!datei) {
		throw FileNotFoundException("Die Datei konnte nicht gefunden werden.");
	}
}

